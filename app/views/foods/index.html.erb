<p id="notice"><%= notice %></p>

<h1> 食べ物 </h1>

<table>
  <thead>
    <tr>
      <th>品名</th>
      <th>賞味期限</th>
      <th>値段</th>
      <th>一言</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <% if (food.expiration_date - Date.today) > 3 %>
          <td class="normal"><%= food.expiration_date %></td>
        <% else %>
          <td class="warn"><%= food.expiration_date %></td>
        <% end %>
        <td><%= food.price %>円</td>
        <td><%= food.remark %></td>
        <td><%= link_to '詳細', food %></td>
        <td><%= link_to '編集', edit_food_path(food) %></td>
        <td><%= link_to '削除', food, method: :delete, data: { confirm: '削除して良いですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

